<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgresults"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="61dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/num3" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/results_text_view2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Â¡FELICIDADES A LOS GANADORES DE LA ORATORIA!"
            android:textSize="30sp"
            android:textStyle="bold|italic" />
    </TableRow>

    <TableRow>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_column="0"
            android:layout_weight="1"
            app:srcCompat="@drawable/oratoria" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/results_text_view4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="&quot;En el poder de tus palabras reside la capacidad de inspirar, mover y cambiar el mundo&quot;."
            android:textSize="20sp"
            android:textStyle="italic" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/first_grade_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_weight="1"
            android:text="PRIMER LUGAR:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/firstGradeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/firstStudentNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:gravity="center"
            android:text="nombre"
            android:textSize="20sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/second_grade_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_weight="1"
            android:text="SEGUNDO LUGAR:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/secondGradeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/secondStudentNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:gravity="center"
            android:text="nombre"
            android:textSize="20sp" />
    </TableRow>

    <TableRow android:layout_height="67dp">

        <TextView
            android:id="@+id/third_grade_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_weight="1"
            android:text="TERCER LUGAR:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thirdGradeTextView"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/thirdStudentNameTextView"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:gravity="center"
            android:text="nombre"
            android:textSize="20sp" />
    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/tieTextView"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="italic"
            android:visibility="visible" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/studentGradeTextViews"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="8sp" />
    </TableRow>
</TableLayout>